<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Start_Date_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(ISBLANK(StartDate)),
				DATEVALUE(StartDate)  &gt; TODAY())</errorConditionFormula>
    <errorDisplayField>StartDate</errorDisplayField>
    <errorMessage>Start Date can not be future date.</errorMessage>
</ValidationRule>
