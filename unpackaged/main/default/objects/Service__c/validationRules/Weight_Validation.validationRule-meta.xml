<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Weight_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(RecordType.DeveloperName == &#39;Physical_Health_Assessment&#39;,
				NOT(ISBLANK(  Weight_kg__c  )),
				OR(Weight_kg__c &lt;= 0 ,Weight_kg__c &gt; 300))</errorConditionFormula>
    <errorDisplayField>Weight_kg__c</errorDisplayField>
    <errorMessage>Weight should be between 0.0 to 300.0.</errorMessage>
</ValidationRule>
