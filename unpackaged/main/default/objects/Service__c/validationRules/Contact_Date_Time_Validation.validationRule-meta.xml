<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Contact_Date_Time_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(ISBLANK(Contact_Date_Time__c)),
			DATEVALUE(Contact_Date_Time__c) &gt; TODAY())</errorConditionFormula>
    <errorDisplayField>Contact_Date_Time__c</errorDisplayField>
    <errorMessage>Contact Date Time can not be future date.</errorMessage>
</ValidationRule>
