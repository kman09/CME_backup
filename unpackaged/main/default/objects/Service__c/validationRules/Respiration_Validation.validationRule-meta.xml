<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Respiration_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(RecordType.DeveloperName == &#39;Physical_Health_Assessment&#39;,
				NOT(ISBLANK( Respiration_per_minute__c )),
			OR(	Respiration_per_minute__c &lt;= 0 ,Respiration_per_minute__c &gt; 200))</errorConditionFormula>
    <errorDisplayField>Respiration_per_minute__c</errorDisplayField>
    <errorMessage>Respiration should be between 0 to 200.</errorMessage>
</ValidationRule>
